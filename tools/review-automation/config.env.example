# ─── Twilio (for SMS) ───
# Sign up: https://www.twilio.com/try-twilio
# Free tier: $15 credit, enough for ~1000 SMS
TWILIO_SID=""
TWILIO_TOKEN=""
TWILIO_FROM="+1XXXXXXXXXX"  # Your Twilio phone number

# ─── Email (SMTP) ───
# For Gmail: Use an App Password (not your regular password)
# https://myaccount.google.com/apppasswords
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER=""
SMTP_PASS=""
FROM_EMAIL=""
FROM_NAME="Ace Growth"

# ─── Defaults ───
DEFAULT_COMPANY="Pro Contractors Inc."
DEFAULT_REVIEW_LINK="https://g.page/r/YOUR-PLACE-ID/review"
